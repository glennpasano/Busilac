@model IEnumerable<Busilac.ViewModels.ClientOrdersViewModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Product Sales</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Product Orders</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Date Ordered</th>
                            <th>Client</th>
                            <th>Products</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductSalesOrders.OrderDate</td>
                                <td>@item.ProductSalesOrders.ClientName</td>
                                <td>@item.ProductListString</td>
                                <td>@item.ProductSalesOrders.ProductStatus.StatusName</td>
                                <td>
                                    @if(item.ProductSalesOrders.StatusId == 1)
                                    {
                                        @Html.ActionLink("View", "Approve", new { id = item.ProductSalesOrders.ProductSalesOrdersId })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
