@using Microsoft.AspNet.Identity
<div class="top_nav">
    <div class="nav_menu">
        <nav>
            <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <li>
                    
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
                        {
                            @Html.AntiForgeryToken()
                            <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/default_profile.png" alt="">@User.Identity.GetUserName()
                                <span class="fa fa-angle-down"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-usermenu pull-right">
                                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                            </ul>
                        }
                    }
                    
                </li>

                <li role="presentation" class="dropdown">
                    <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-envelope-o"></i>
                        <span id="message-count" class="badge bg-green"></span>
                    </a>
                    <ul id="messages-menu" class="dropdown-menu list-unstyled msg_list" role="menu">
                        @*<li style="padding: 10px;" class="menu-buttons">
                            <div class="text-center">
                                <a>
                                    <strong>See All Messages</strong>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                        </li>*@
                        <li class="menu-buttons" style="background-color: #1abb9c; cursor: pointer;" data-toggle="modal" data-target="#sendMessageModal" >
                            <div class="text-center">
                                <a style="color: #fff;">
                                    <strong>Compose</strong>
                                    <i class="fa fa-edit fa-lg"></i>
                                </a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
</div>
