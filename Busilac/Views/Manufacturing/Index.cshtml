@model IEnumerable<Busilac.ViewModels.ManufacturingProductionOrdersViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Manufacturing</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <table class="table table-striped table-bordered datatable">
                <thead>
                    <tr>
                        <th>Date Ordered</th>
                        <th>Products Requested</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductManufactureOrders.RequestDate</td>
                            <td>@item.OrderDetailsString</td>
                            <td>@item.ProductManufactureOrders.ProductStatus.StatusName</td>
                            <td>
                                @if(item.ProductManufactureOrders.StatusId == 1)
                                {
                                    @Html.ActionLink("View", "Approve", new { id = item.ProductManufactureOrders.ProductManufactureOrderId })
                                } else if (item.ProductManufactureOrders.StatusId == 3)
                                {
                                    <a href="@Url.Action("Details", "Manufacturing", new { id = item.ProductManufactureOrders.ProductManufactureOrderId })">Details</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

